---
const { type, pack, badges, benefits } = Astro.props;
---

<div
  class="relative flex flex-col items-center justify-center border border-transparent border-dashed p-7 group rounded-2xl"
>
  <div
    class="absolute inset-0 z-20 w-full h-full duration-300 ease-out border border-dashed bg-neutral-950 rounded-2xl border-neutral-600"
  >
  </div>
  <div
    class="absolute inset-0 z-10 w-full h-full duration-300 ease-out border border-dashed rounded-2xl border-neutral-600"
  >
  </div>
  <div class="relative z-30">
    <h2 class="text-sm tracking-widest text-white title-font mb-1 font-medium">
      {type}
    </h2>
    <h1
      class="text-4xl text-white pb-4 mb-4 border-b border-neutral-700 leading-none"
    >
      {pack}
    </h1>
    {
      badges.map((badge: string) => {
        return (
          <p class="flex items-center text-neutral-400 mb-2">
            <span class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-neutral-700 text-neutral-400 rounded-full flex-shrink-0">
              <svg
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                class="w-3 h-3"
                viewBox="0 0 24 24"
              >
                <path d="M20 6L9 17l-5-5" />
              </svg>
            </span>
            {badge}
          </p>
        );
      })
    }
    <p class="text-sm text-neutral-400 mt-3 pt-4 border-t border-neutral-700">
      {benefits}
    </p>
  </div>
</div>
